<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Área do Cliente</title>

  <%-include('client_includes/index/dt_links.ejs')%>

</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%-include('client_includes/header.ejs')%>
  
  <!-- Left side column. contains the logo and sidebar -->
  <%-include('client_includes/left_side_column.ejs')%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Área de Cliente        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Início</a></li>
        <li class="active">Área do Cliente</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      
      <div class="row-fluid">
                      
        <% if(typeof msg != "undefined" && msg != ""){ %>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Mensagem!</strong>
            <%=msg%>
          </div>
        <% } %>

        <% if(typeof error != "undefined" && error != ""){ %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h2>Ops! Tivemos um problema técnico. Por favor, entre em contato com o desenvolvedor</h2>
            <p>Desculpe o incoveniente :-(</p>
            <br>
            <strong>Error: </strong>
            <%=error%>
          </div>
        <% } %>
          
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Meus Pedidos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              
              <table id="dt_requests" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>ID</th>
                  <th>Data</th>
                  <th>Valor</th>
                  <th>Status</th>                  
                </tr>
                </thead>
                <tbody>                
                  <% for(request of allRequests) { %>
                  <tr>
                    <td>
                      <a href="/order_details?requestId=<%=request.id%>" 
                        title="Detalhes do Pedido">
                        <%=request.id%>
                      </a>
                    </td>
                    <td>
                      <%=request.orderDate.getDate()%>
                      /<%=request.orderDate.getMonth() + 1%>
                      /<%=request.orderDate.getFullYear()%>
                    </td>
                    <td><%=new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(request.total)%></td>
                    <td>
                      <% if(request.status == 0) {%>
                      <div style="color: red">Não atendido</div>
                      <% } else { %>
                      <div style="color: blue">Atendido</div>
                      <% } %>
                    </td>
                  </tr>
                  <% } %>
                                  
                </tbody>
                <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Data</th>
                  <th>Valor</th>
                  <th>Status</th>                  
                </tr>
                </tfoot>
              </table>
              
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->



    </section>
    <!-- /.content -->

  </div>
  <!-- /.content-wrapper -->
  <%-include('./client_includes/footer.ejs')%>
  <script src="/client/utilsClient.js"></script>

</div>
<!-- ./wrapper -->

<%-include('client_includes/index/dt_scripts.ejs')%>
</body>
</html>
