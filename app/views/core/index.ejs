  <%-include('core_includes/header.ejs')%>

  <div class="content-section">

    <div class="container">
    
      <div class="row-fluid">
                      
        <% if(typeof msg != "undefined" && msg != ""){ %>
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Mensagem!</strong>
            <%=msg%>
        </div>
        <% } %>

        <% if(typeof error != "undefined" && error != ""){ %>
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h2>Ops! Tivemos um problema t√©cnico. Por favor, entre em contato com o desenvolvedor</h2>
            <p>Desculpe o incoveniente :-(</p>
            <br>
            <strong>Error: </strong>
            <%=error%>
        </div>
        <% } %>
        
      </div>        

      <div class="row">
        <% for(product of paginator.content) { %>
        <div class="col-md-3">
          <div class="product-item-1">
              <div class="product-thumb">
                <img src="upload/product/<%=product.image %>">
              </div> <!-- /.product-thumb -->
              <div class="product-content">
                <h5><a href="#"><%=product.name%></a></h5>
                <span class="tagline"><%=whatCategory(product.category)%></span>
                <span class="price"><%=new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(product.price)%></span>
                <p><%=product.description%></p>
                <p>
                  <a 
                  class="btn btn-default"
                  href="/add_to_cart?productId=<%=product.id%>">
                  Colocar no Carrinho
                  </a>
                </p>

              </div> <!-- /.product-content -->
          </div> <!-- /.product-item -->
        </div> <!-- /.col-md-3 -->
        <% } %>
      </div> <!-- /.row -->
      
      <% if(paginator.nPages < 7){ %>
      <%-include('core_includes/pagination/few_pages.ejs')%>
      <% } else {%>
      <%-include('core_includes/pagination/many_pages.ejs')%>
      <% } %>
        
    </div> <!-- /.container -->
  </div> <!-- /.content-section -->
  
