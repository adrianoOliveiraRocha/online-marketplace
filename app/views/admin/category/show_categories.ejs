<!DOCTYPE html>
<html class="no-js">
	
	<head>
		<title>Exibir Categorias</title>
		<%- include('../includes/links-sp-css.ejs'); %>
	</head>
	
	<body>

    <%- include('../includes/top.ejs'); %>
		
		<div class="container-fluid">

			<div class="row-fluid">

				<%- include('../includes/left-column.ejs'); %>  

				<!-- Content -->
				<div class="span9" id="content">
				   
					<div class="row-fluid">
						
					<div class="span12">
					<div class="block-content collapse in">

						<!-- block -->
						<div class="block">
						<div class="navbar navbar-inner block-header">
								<div class="muted pull-left">Todos as Categorias</div>
						</div>
						<div class="block-content collapse in">
                <div class="span12">
                
                <table cellpadding="0" cellspacing="0" border="0" 
                    class="table table-striped table-bordered" id="example">
                    
                  <thead>

                    <tr>
                      <th>ID</th>
                      <th>Nome</th>								
                    </tr>

                  </thead>

                  <tbody>
                    <% for(category of Object.values(categories)){ %>
                      <%=category.id%>      
                      <tr class="odd gradeX">
                        <td><a href="/detalhes_categoria?id=<%=category.id%>" 
                          title="Detalhes"><%=category.id%></a></td>
                        <td><a href="/detalhes_categoria?id=<%=category.id%>" 
                          title="Detalhes"><%=category.name%></a></td>								
                      </tr>                 
                    <% } %>							
                  </tbody>

                  </table>
										
                  

						</div>
						</div>
						</div>
						<!-- /block -->

					</div>
					
					</div>
						
					</div>

				</div>
				<!-- End Content -->			

			</div>

			<hr>

			<%- include('../includes/footer.ejs'); %>

		</div>
		<!--/.fluid-container-->
    <%- include('../includes/scripts-sp-bottom.ejs'); %>
    
	</body>

</html>