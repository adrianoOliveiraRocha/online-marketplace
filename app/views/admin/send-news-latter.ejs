<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Área Administrativa</title>
  <link href="/admin/quill/css/quill.snow.css" rel="stylesheet">
  <%-include('admin_includes/index/links.ejs')%>

</head>

<!-- the function updateData() is in header-->
<body
  onload="JavaScript:updateData()"
  class="hold-transition skin-blue sidebar-mini">

<div class="wrapper">

  <%-include('admin_includes/header.ejs')%>

  <!-- Left side column. contains the logo and sidebar -->
  <%-include('admin_includes/left_side_column.ejs')%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Painel de Controle
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Início</a></li>
        <li class="active">Painel de Controle</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Enviar Newslatter</h3>
        </div>

        <div class="box-body">
          <div class="form-group">            
            <form action="/send_news_latter" method="POST">
              <div class="form-group">
                <label for="">Título da Mensagem</label>
                <input class="form-control" name="title" autofocus>
              </div>
              <div class="form-group">
                <label for="">Mensagem</label>
                <textarea class="form-control" 
                  id="keepText" name="msgBody"></textarea>
              </div>  

              <div class="control-group">
                <div class="controls">
                  <div class="btn-group">
                    <input type="submit" class="btn btn-primary" value="Salvar" />
                    
                    <button type="button" class="btn btn-warning"
                    onclick="clean()">
                      Limpar
                    </button>
                    <a class="btn btn-danger" href="/admin">
                      Cancelar
                    </a>
                  </div>
                </div>
              </div>  

            </form>
            
          </div>

          <script>
            function clean() {
              var textArea = document.getElementById("keepText").value = ""              
            }
          </script>
        </div>
        
      </div>
      <!-- /.box -->      
    </section>
    <!-- /.content -->

  </div>
  <!-- /.content-wrapper -->
  <%-include('./admin_includes/footer.ejs')%>

</div>
<!-- ./wrapper -->

<%-include('admin_includes/index/scripts.ejs')%>

<script src="/admin/notifications.js"></script>

</body>
</html>
