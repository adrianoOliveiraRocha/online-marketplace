<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Área do Cliente</title>
  <!-- data table -->
  <%-include('../../client_area/client_includes/index/dt_links.ejs')%>

</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%-include('../../admin/admin_includes/header.ejs')%>
  
  <!-- Left side column. contains the logo and sidebar -->
  <%-include('../../admin/admin_includes/left_side_column.ejs')%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Área Administrativa        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Início</a></li>
        <li class="active">Área Administrativa</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      
      <div class="row-fluid">
                      
        <% if(typeof msg != "undefined" && msg != ""){ %>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Mensagem!</strong>
            <%=msg%>
          </div>
        <% } %>

        <% if(typeof error != "undefined" && error != ""){ %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h2>Ops! Tivemos um problema técnico. Por favor, entre em contato com o desenvolvedor</h2>
            <p>Desculpe o incoveniente :-(</p>
            <br>
            <strong>Error: </strong>
            <%=error%>
          </div>
        <% } %>
          
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Meus Pedidos</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <% if(allOrders.length > 0){ %>
              <table id="dt_requests" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>ID</th>
                  <th>Data</th>
                  <th>Valor</th>
                  <th>Status</th>    
                              
                </tr>
                </thead>
                <tbody>                
                  <% for(order of allOrders) { %>
                  <tr>
                    <td>
                      <a href="/admin_order_details?orderId=<%=order.id%>" 
                        title="Detalhes do Pedido">
                        <%=order.id%>
                      </a>
                    </td>
                    <td>
                      <%=order.orderDate.getDate()%>
                      /<%=order.orderDate.getMonth() + 1%>
                      /<%=order.orderDate.getFullYear()%>
                    </td>
                    <td><%=new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(order.total)%></td>
                    <td>
                      <% if(order.status == 0) {%>
                      <div style="color: red">Não atendido</div>
                      <% } else { %>
                      <div style="color: blue">Atendido</div>
                      <% } %>
                    </td>
                    
                  </tr>
                  <% } %>
                                  
                </tbody>
                <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Data</th>
                  <th>Valor</th>
                  <th>Status</th>  
                                 
                </tr>
                </tfoot>
              </table>
              <% } else { %>
              <div class="alert alert-warning">
                <strong>Aviso!</strong> Você não tem nenhun pedido
              </div>
              <% } %>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->



    </section>
    <!-- /.content -->

  </div>
  <!-- /.content-wrapper -->
  <%-include('../../admin/admin_includes/footer.ejs')%>
  <script src="/order/utilsOrder.js"></script>
  
</div>
<!-- ./wrapper -->
<!-- data table -->
<%-include('../../client_area/client_includes/index/dt_scripts.ejs')%>
</body>
</html>
